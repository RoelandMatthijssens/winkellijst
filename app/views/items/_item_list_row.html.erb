<% draggable = draggable.nil? || draggable ? "draggable" : "" %>
<tr id="item-<%= item.id %>">
	<td id="item_<%= item.id %>" class="<%= draggable %>"><%= item.name %></td>
	<td><%= item.price %></td>
	<td class="small">
		<%= link_to raw('<i class="icon icon-edit"></i>'), edit_item_path(item), class:"btn btn-mini" %>
		<%= link_to raw('<i class="icon icon-trash"></i>'), item, method: :delete, class:"btn btn-danger btn-mini ", remote:true %></td>
</tr>
