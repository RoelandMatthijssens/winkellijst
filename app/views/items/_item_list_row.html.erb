<tr id="item-<%= item.id %>">
	<td><%= item.name %></td>
	<td><%= item.price %></td>
	<td class="small">
		<%= link_to raw('<i class="icon-edit"></i>'), edit_item_path(item), class:"btn btn-mini" %>
		<%= link_to raw('<i class="icon-trash"></i>'), item, method: :delete, class:"btn btn-danger btn-mini ", remote:true %></td>
</tr>
