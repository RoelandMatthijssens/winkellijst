<h3 id="shopping_list_h_<%= shopping_list.id %>">
	<%= shopping_list.date %>
	<% if shopping_list.lock %>
		<i class="icon icon-lock pull-right"></i>
	<% end %>
	<%= link_to raw('<i class="icon icon-trash"></i>'), shopping_list, method: :delete, class:"pull-right", remote:true %>
</h3>
<div id="<%= shopping_list.id %>" class="accordion-content <%= shopping_list.lock ? "inactive" : "droppable" %>">
	<% shopping_list.shopping_items.each do |shopping_item| %>
		<div id=shopping_item_<%= shopping_item.item.id %>><%= shopping_item.amount %>x <%= shopping_item.item.name %></div>
	<% end %>
</div>
